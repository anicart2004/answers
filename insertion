#include <stdio.h>
#include <stdlib.h>

int n, a[20];   
void Input() {
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
}
void PrintArray() {
    for (int i = 0; i < n; i++) {
        printf("%d\t", a[i]);
    }
    printf("\n");
}
void InsertionSort() {
    int i, j, key;
    for (i = 1; i < n; i++) {
        key = a[i];
        j = i - 1;

        // Move elements greater 
        while (j >= 0 && a[j] > key) {
            a[j + 1] = a[j];
            j--;
        }
        a[j + 1] = key;
    }
}

int main() {
    printf("INSERTION SORT PROGRAM\n");

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    Input();                

    printf("Original Array:\n");
    PrintArray();          

    InsertionSort();      

    printf("Sorted Array:\n");
    PrintArray();           

    return 0;
}
