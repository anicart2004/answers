#include <stdio.h>
#include <stdlib.h>

int n, a[20];  

void Input() {
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
}

void PrintArray() {
    for (int i = 0; i < n; i++) {
        printf("%d\t", a[i]);
    }
    printf("\n");
}
void SelectionSort() {
    int i, j, minIndex, temp;
    for (i = 0; i < n - 1; i++) {
        minIndex = i;
        for (j = i + 1; j < n; j++) {
            if (a[j] < a[minIndex]) {
                minIndex = j;
            }
        }
        // Swap a[i] and a[minIndex]
        temp = a[i];
        a[i] = a[minIndex];
        a[minIndex] = temp;
    }
}

int main() {
    printf("SELECTION SORT PROGRAM\n");

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    Input();                

    printf("Original Array:\n");
    PrintArray();           

    SelectionSort();        

    printf("Sorted Array:\n");
    PrintArray();           

    return 0;
}
